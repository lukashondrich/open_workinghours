---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Imprint" description="Legal information and contact details for Open Working Hours.">
  <Fragment slot="head">
    <link rel="alternate" hreflang="en" href="https://openworkinghours.org/imprint" />
    <link rel="alternate" hreflang="de" href="https://openworkinghours.org/de/impressum" />
  </Fragment>

  <div class="max-w-3xl mx-auto px-4 sm:px-6 py-12 sm:py-16">
    <!-- Language Switch -->
    <div class="mb-6 text-sm">
      <span class="text-stone-400">Deutsch:</span>
      <a href="/de/impressum" class="text-teal-600 hover:text-teal-700 ml-1">Impressum</a>
    </div>

    <header class="mb-8">
      <h1 class="text-stone-900">Imprint</h1>
      <p class="text-stone-500 text-sm mt-2">Legal disclosure pursuant to § 5 TMG (German Telemedia Act)</p>
    </header>

    <div class="prose text-stone-700 space-y-8">
      <!-- Responsible Person -->
      <section>
        <h2 class="text-lg font-semibold text-stone-900 mb-3">Responsible</h2>
        <p class="text-stone-600">
          Lukas Jonathan Hondrich<br />
          Karl-Marx-Straße 182<br />
          12043 Berlin<br />
          Germany
        </p>
      </section>

      <!-- Contact -->
      <section>
        <h2 class="text-lg font-semibold text-stone-900 mb-3">Contact</h2>
        <p class="text-stone-600">
          Email: <a href="mailto:lukashondrich@gmail.com" class="text-teal-600 hover:text-teal-700">lukashondrich@gmail.com</a>
        </p>
      </section>

      <!-- Editorial Responsibility -->
      <section>
        <h2 class="text-lg font-semibold text-stone-900 mb-3">Responsible for content pursuant to § 55 para. 2 RStV</h2>
        <p class="text-stone-600">
          Lukas Jonathan Hondrich<br />
          Karl-Marx-Straße 182<br />
          12043 Berlin
        </p>
      </section>

      <!-- Project Status -->
      <section>
        <h2 class="text-lg font-semibold text-stone-900 mb-3">Note</h2>
        <p class="text-stone-600 text-sm">
          This project is in an early development stage. For information about data protection, please see the <a href="/privacy" class="text-teal-600 hover:text-teal-700">Privacy page</a> or the <a href="/privacy-policy" class="text-teal-600 hover:text-teal-700">Privacy Policy</a>.
        </p>
      </section>

      <!-- License -->
      <section class="border-t border-stone-200 pt-6 mt-8">
        <p class="text-stone-500 text-sm">
          © 2025 Open Working Hours — Code licensed under MIT License. Documentation under CC BY 4.0.
        </p>
      </section>
    </div>
  </div>
</Layout>
