{
  "name": "open-working-hours-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Open Working Hours mobile app",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --runInBand",
    "test:ios": "PLATFORM=ios node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --runInBand",
    "test:android": "PLATFORM=android node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --runInBand",
    "test:auth": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js flows/auth.test.js",
    "test:location": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js flows/location.test.js",
    "test:calendar": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js flows/calendar.test.js",
    "test:shifts": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js flows/shifts.test.js",
    "test:absences": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js flows/absences.test.js",
    "test:manual-session": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js flows/manual-session.test.js",
    "build:ios": "rm -f ~/Library/Developer/Xcode/DerivedData/mobileapp-*/Build/Intermediates.noindex/XCBuildData/build.db 2>/dev/null; cd .. && TEST_MODE=true npx expo run:ios --configuration Release",
    "build:android": "cd .. && JAVA_HOME=\"/Applications/Android Studio.app/Contents/jbr/Contents/Home\" TEST_MODE=true npx expo run:android --variant release",
    "infra": "./start-infra.sh",
    "infra:ios": "./start-infra.sh ios",
    "infra:android": "./start-infra.sh android",
    "infra:both": "./start-infra.sh both",
    "appium:start": "appium --allow-cors --relaxed-security",
    "appium:install-drivers": "appium driver install xcuitest && appium driver install uiautomator2"
  },
  "dependencies": {
    "webdriverio": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "engines": {
    "node": ">=20.19.0 <23.0.0 || >=24.0.0"
  }
}
