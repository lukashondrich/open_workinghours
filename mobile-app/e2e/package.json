{
  "name": "open-working-hours-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Open Working Hours mobile app",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:ios": "PLATFORM=ios node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:android": "PLATFORM=android node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:auth": "node --experimental-vm-modules node_modules/jest/bin/jest.js flows/auth.test.js",
    "test:location": "node --experimental-vm-modules node_modules/jest/bin/jest.js flows/location.test.js",
    "test:calendar": "node --experimental-vm-modules node_modules/jest/bin/jest.js flows/calendar.test.js",
    "infra": "./start-infra.sh",
    "infra:ios": "./start-infra.sh ios",
    "infra:android": "./start-infra.sh android",
    "infra:both": "./start-infra.sh both",
    "appium:start": "appium --allow-cors --relaxed-security",
    "appium:install-drivers": "appium driver install xcuitest && appium driver install uiautomator2"
  },
  "dependencies": {
    "webdriverio": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "engines": {
    "node": ">=20.19.0 <23.0.0 || >=24.0.0"
  }
}
